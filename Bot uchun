from telegram import Update
from telegram.ext import Updater, CommandHandler, MessageHandler, Filters
from pytube import YouTube

# Bot tokenni BotFather orqali olingan token bilan almashtiring
TOKEN = 'YOUR_BOT_TOKEN'

def start(update: Update, context):
    update.message.reply_text('Salom! Video yuklab olish uchun YouTube video havolasini yuboring.')

def download_video(update: Update, context):
    # Foydalanuvchidan video havolasini olish
    url = update.message.text
    try:
        # YouTube video ob'ektini yaratish
        yt = YouTube(url)
        
        # Video sifatini tanlash
        stream = yt.streams.get_highest_resolution()
        
        # Faylni yuklab olish
        stream.download(filename="downloaded_video.mp4")
        
        # Foydalanuvchiga yuklab olish muvaffaqiyatli bo'lganligini bildiradigan xabar yuborish
        update.message.reply_text('Video muvaffaqiyatli yuklab olindi. Endi video faylni yuklab olish mumkin.')
        
        # Video faylini foydalanuvchiga yuborish
        with open("downloaded_video.mp4", 'rb') as video:
            update.message.reply_video(video)
        
    except Exception as e:
        update.message.reply_text(f"Xatolik yuz berdi: {str(e)}")

def main():
    # Updater obyektini yaratish va tokenni qo'llash
    updater = Updater(TOKEN, use_context=True)

    # Dispatcher ni olish
    dispatcher = updater.dispatcher

    # /start komandasi uchun handler
    dispatcher.add_handler(CommandHandler('start', start))

    # Video havolasini yuborgan foydalanuvchilarni qayta ishlash
    dispatcher.add_handler(MessageHandler(Filters.text & ~Filters.command, download_video))

    # Botni ishga tushirish
    updater.start_polling()
    updater.idle()

if __name__ == '__main__':
    main()
